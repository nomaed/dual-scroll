{
    "extends": "tslint:recommended",
    "rules": {
        "curly": false,
        "no-unsafe-finally": true,
        "object-literal-sort-keys": false,
        "no-var-requires": false,
        "no-string-literal": false,
        "no-console": false,
        "no-namespace": false,
        "trailing-comma": [
            true,
            {
                "singleline": "never"
            }
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "public-instance-field",
                    "protected-static-field",
                    "protected-instance-field",
                    "private-static-field",
                    "private-instannoce-field",
                    "constructor",
                    "public-static-method",
                    "public-instance-method",
                    "protected-static-method",
                    "protected-instance-method",
                    "private-static-method",
                    "private-instance-method"
                ]
            }
        ],
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
        "no-empty": false
    }
}
